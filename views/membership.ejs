<%- include('includes/head.ejs'); %>
<%- include('includes/navigation.ejs')%>

<div class="container">

<div class="row justify-content-center">
   <div class="col-12 col-sm-6 col-md-6">


      <form action="/membership" class="form-container bg-light" method="POST">
         <div class="justify-content-center">

          <% if (message!=''){%>

            <div class="alert alert-success alert-dismissible ">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= message %>
            
            </div>
          

        <% }%>
            <h3>Membership Form</h3> 
         </div>
         <hr>
         <div class="form-group">
           <label class="required" for="exampleInputEmail1">Full Name</label>
           <input  autocomplete="off" type="text" class="form-control" name="fullName" id="exampleInputEmail1"  placeholder="Full Name">
          
         </div>
         <div class="form-group">
           <label class="required" for="exampleInputPassword1">Email</label>
           <input  autocomplete="off" type="email" class="form-control" id="exampleInputPassword1" placeholder="Email">
         </div>

         <div class="form-group">
            <label class="required" for="exampleInputPassword1">Phone#</label>
            <input autocomplete="off" type="phone" class="form-control" id="exampleInputPassword1" placeholder="Phone Number">
          </div>

          <div class="form-group">
            <label class="required" for="exampleInputPassword1">University Name</label>
            <input  autocomplete="off" type="email" class="form-control" id="exampleInputPassword1" placeholder="Univeristy Name">
          </div>

          
          <div class="form-group">
            <label class="required" for="exampleInputPassword1">Department Name</label>
            <input  autocomplete="off" type="email" class="form-control" id="exampleInputPassword1" placeholder="Department Name">
          </div>

          
          <div class="form-group">
            <label class="required" for="exampleInputPassword1">Experience</label>
            <input autocomplete="off" type="email" class="form-control" id="exampleInputPassword1" placeholder="Experience">
          </div>

          <div class="form-group">
            <label class="required" for="exampleInputPassword1">Motivation for Joining HSDC</label>
            <input  autocomplete="off" type="email" class="form-control" id="exampleInputPassword1" placeholder="Motivation">
          </div>
        
         <button type="submit" class="btn btn-primary">Submit</button>
       </form>


   </div>
</div>
</div>




<%- include('includes/footer.ejs'); %>

<%- include('includes/end.ejs'); %>